{
  "name": "browser-extension-boilerplate-v3",
  "version": "1.0.0",
  "description": "",
  "main": "dist",
  "type": "module",
  "scripts": {
    "prepare": "npx husky install",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "pnpm run lint && pnpm run test && ./build.sh",
    "lint": "npx eslint ./extension/**/*.js",
    "prettier": "npx prettier --write  extension/**/*.js",
    "commit": "git-cz"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
        "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "@commitlint/prompt": "^18.4.3",
    "@commitlint/prompt-cli": "^18.4.3",
    "@types/chrome": "^0.0.253",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
        "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "html-minifier-terser": "^7.2.0",
    "husky": "^8.0.3",
    "inquirer": "8",
    "jest": "^29.7.0",
    "jest-chrome": "github:byverdu/jest-chrome",
    "jest-environment-jsdom": "^29.7.0",
    "jest-when": "^3.6.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "terser": "^5.24.0"
  }
}
